    section.impression
      .impressionContainer 
        p.impressionSubtitle фото-отчет
        h2.impressionTitle Делимся впечатлениями
        .impressionPhotoWrapper 
          img(src=require('./images/impressionSection/1.png'), alt='photo')
          img(src=require('./images/impressionSection/2.png'), alt='photo')
          img(src=require('./images/impressionSection/3.png'), alt='photo')
          img(src=require('./images/impressionSection/4.png'), alt='photo')
          img(src=require('./images/impressionSection/5.png'), alt='photo')
          img(src=require('./images/impressionSection/6.png'), alt='photo')
